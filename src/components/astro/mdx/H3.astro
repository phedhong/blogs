---
import type { HTMLAttributes } from 'astro/types'
import Heading from './Heading.astro'

type Props = HTMLAttributes<'h3'> & {
	slot?: string
}

const { props } = Astro
const childContent = await Astro.slots.render('default')
---

<Heading
	as="h3"
	class="font-display text-primary dark:text-primary-dark my-6 text-2xl font-bold leading-9"
	{...props}
>
	{childContent}
</Heading>
