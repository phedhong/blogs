---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'blockquote'>

const { props } = Astro
---

<blockquote
	class="mdx-blockquote bg-highlight shadow-inner-border dark:bg-highlight-dark dark:shadow-inner-border-dark relative my-8 flex rounded-2xl bg-opacity-50 px-8 py-4 leading-6"
	{...props}
>
	<span class="relative block">
		<slot />
	</span>
</blockquote>
