---

import '@styles/global.css'


---

<html lang="en" class="dark">
  
  <head>
    <slot name="common-head" />
     <style>

      .wrapper {
        box-sizing: border-box;
        min-height: 100%;
        display: flex;
        flex-direction: column;
      }

      .page-header,
      .page-footer {
        flex-grow: 0;
        flex-shrink: 0;
      }

      .page-body {
        flex-grow: 1;
        margin: auto;
        overflow-y: auto;
      }

    </style>
  
  </head>
  <body class="wrapper">

    <div class="page-header"><slot name="page-header" > </slot></div>
    
    <div class="page-body">
      <slot> <p>A topnav, content and a footer.</p> </slot>
    </div>
    
    <div class="page-footer"><slot name="page-footer" ><p>Footer</p></slot></div>
    
  </body>
  </html>

 